<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Main Content -->
    <div class="col-md-9 col-lg-10 p-5">
      <!-- Page Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Your Applications</h2>
        <a href="/citizen/apply" class="btn btn-success px-4 py-2">Apply for Service</a>
      </div>

      <!-- Search & Filter Form -->
      <form class="row g-3 align-items-center mb-4" method="get" action="/citizen">
        <div class="col-md-6">
          <input
            type="text"
            name="search"
            value="<%= search %>"
            class="form-control"
            placeholder="Search by service or department..."
          />
        </div>
        <div class="col-md-3">
          <select name="status" class="form-select">
            <option value="All" <%= status === 'All' ? 'selected' : '' %>>All</option>
            <option value="SUBMITTED" <%= status === 'SUBMITTED' ? 'selected' : '' %>>Submitted</option>
            <option value="PAID" <%= status === 'PAID' ? 'selected' : '' %>>Paid</option>
            <option value="PROCESSING" <%= status === 'PROCESSING' ? 'selected' : '' %>>Processing</option>
            <option value="COMPLETED" <%= status === 'COMPLETED' ? 'selected' : '' %>>Completed</option>
          </select>
        </div>
        <div class="col-md-3 text-md-end">
          <button type="submit" class="btn btn-primary px-4 w-100 w-md-auto">Filter</button>
        </div>
      </form>

      <!-- Applications Table -->
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <table class="table mb-0">
            <thead class="table-primary">
              <tr>
                <th>ID</th>
                <th>Service</th>
                <th>Status</th>
                <th>Fee</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% if (requests.length === 0) { %>
                <tr>
                  <td colspan="5" class="text-center py-3 text-muted">No applications found.</td>
                </tr>
              <% } else { %>
                <% requests.forEach(r => { %>
                  <tr>
                    <td>
                      <a href="/citizen/request/<%= r.id %>" class="text-decoration-none text-primary">
                        <%= r.id %>
                      </a>
                    </td>
                    <td><%= r.service_name %> (<%= r.dept_name %>)</td>
                    <!-- Status Column -->
                    <td><%= r.payment_status || r.current_status %></td>
                    <!-- Fee Column -->
                    <td>
                      <% if (r.fee_cents) { %>
                        $<%= (r.fee_cents / 100).toFixed(2) %>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                    <!-- Date Column -->
                    <td><%= r.submitted_at ? new Date(r.submitted_at).toLocaleDateString() : '-' %></td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
