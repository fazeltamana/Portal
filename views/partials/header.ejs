<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ProjectPortal</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f4f8;
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 220px;
      background-color: #fff;
      border-right: 1px solid #dee2e6;
      padding: 20px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
    }
    .sidebar h4 {
      color: #0d6efd;
      margin-bottom: 1.5rem;
      font-weight: 600;
    }
    .sidebar a {
      display: block;
      color: #333;
      text-decoration: none;
      margin-bottom: 10px;
      font-size: 16px;
    }
    .sidebar a:hover {
      color: #0d6efd;
    }

    /* Main content area */
    .main-content {
      margin-left: 220px;
      flex: 1;
    }

    /* Top Navbar */
    .navbar-custom {
      background-color: #0d6efd;
    }
    .navbar-custom .navbar-brand {
      color: #fff;
      font-weight: 500;
    }
    .navbar-custom .nav-link {
      color: #fff;
      font-weight: 500;
    }
    .navbar-custom .nav-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <h4>E-Gov Portal</h4>
    <% if (!user) { %>
      <a href="/auth/login">Login</a>
      <a href="/auth/register">Register</a>
    <% } else { %>
      <% if(user.roles.includes('CITIZEN')) { %>
        <a href="/citizen">Dashboard</a>
        <a href="/citizen/apply">Apply for Service</a>
      <% } %>
      <% if(user.roles.includes('OFFICER') || user.roles.includes('DEPT_HEAD')) { %>
        <a href="/officer">Dashboard</a>
        <a href="/officer/requests">Review Requests</a>
      <% } %>
      <% if(user.roles.includes('ADMIN')) { %>
        <a href="/admin">Admin Dashboard</a>
        <a href="/admin/users">Manage Users</a>
        <a href="/admin/departments">Departments & Services</a>
        <a href="/admin/reports">Reports</a>
      <% } %>
      <a href="/profile">Profile</a>
      <a href="/auth/logout">Logout</a>
    <% } %>
  </div>

  <!-- Main Content Area -->
  <div class="main-content">
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ProjectPortal</a>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav">
            <% if (!user) { %>
              <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
              <li class="nav-item"><a class="nav-link" href="/auth/register">Register</a></li>
            <% } else { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                  <%= user.full_name %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" href="/profile">Profile</a></li>
                  <% if(user.roles.includes('ADMIN')) { %>
                    <li><a class="dropdown-item" href="/admin">Admin Dashboard</a></li>
                  <% } %>
                  <% if(user.roles.includes('OFFICER') || user.roles.includes('DEPT_HEAD')) { %>
                    <li><a class="dropdown-item" href="/officer">Officer Dashboard</a></li>
                  <% } %>
                  <% if(user.roles.includes('CITIZEN')) { %>
                    <li><a class="dropdown-item" href="/citizen">Citizen Dashboard</a></li>
                  <% } %>
                  <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
                </ul>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
